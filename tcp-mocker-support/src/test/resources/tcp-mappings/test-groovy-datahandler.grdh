import io.payworks.labs.tcpmocker.support.DataBuilder
import io.payworks.labs.tcpmocker.support.groovy.GroovyDataHandler

class TestGroovyDataHandler extends GroovyDataHandler {

    @Override
    protected DataBuilder request() {
        requestBuilder()
                .stx()
                .ascii("ping")
                .etx()
    }

    @Override
    protected DataBuilder response() {
        responseBuilder()
                .stx()
                .ascii("pong")
                .etx()
    }
}
