import io.payworks.labs.tcpmocker.support.builder.BinaryBuilder
import io.payworks.labs.tcpmocker.support.builder.DataHandlerBuilder
import io.payworks.labs.tcpmocker.support.definition.DataHandlerBuilderProvider

class TestDataHandlerProvider extends DataHandlerBuilderProvider {

    @Override
    protected DataHandlerBuilder dataHandler() {
        return new DataHandlerBuilder()
                .request(new BinaryBuilder()
                        .stx()
                        .ascii("ping")
                        .etx())
                .response(new BinaryBuilder()
                        .stx()
                        .ascii("pong")
                        .etx())
    }
}
